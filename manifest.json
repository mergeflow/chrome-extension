{
  "manifest_version": 3,
  "name": "Mergeflow Search",
  "version": "1.0",
  "description": "Get real-time, organized R&D and market insights for any word(s) you see in a webpage.",
  "permissions": [
	  "contextMenus",
	  "activeTab"
  ],
  "action": {
	  "default_popup": "popup.html",
	  "default_icon": {
		"16": "Mergeflow-16.png",
		"48": "Mergeflow-48.png",
		"128": "Mergeflow-128.png"
	  }
	},  
  "background": {
	"service_worker": "background.js"
  },
  "icons": {
	"16": "Mergeflow-16.png",
    "48": "Mergeflow-48.png",
    "128": "Mergeflow-128.png"
  }
}
